@{
    ViewData["Title"] = "Home Page";
}

 <h2 class="m-4">Registration</h2> 
    @model WeddingPlanner.Models.RegisterViewModel

</div>    
    <form asp-action="Register" asp-controller="addUser" method="POST"> 
        <h3 class="m-4">Register</h3>       
        <div class="form-group">
            <div class="form-group">
                <div class="row">
                <label asp-for="Register.FirstName">First Name:</label>
                <span asp-validation-for="Register.FirstName"></span>
                <input type="text" class="form-control" asp-for="Register.FirstName" placeholder="First Name">
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                <label asp-for="Register.LastName">Last Name:</label>
                <span asp-validation-for="Register.LastName"></span>
                <input type="text" class="form-control" asp-for="Register.LastName" placeholder="Last Name">
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                <label asp-for="Register.Email">Email:</label>
                <span asp-validation-for="Register.Email"></span>
                <input type="text" class="form-control" asp-for="Register.Email" placeholder="Email">
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                <label asp-for="Register.Password">Password:</label>
                <span asp-validation-for="Register.Password"></span>
                <input type="text" class="form-control" asp-for="Register.Password" placeholder="Password">
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                <label asp-for="Register.ConfirmPassword">Confirm Password:</label>
                <span asp-validation-for="Register.ConfirmPassword"></span>
                <input type="text" class="form-control" asp-for="Register.ConfirmPassword" placeholder="Confirm Password">
                </div>
            </div>
        <button type="submit" class="btn btn-default">Register</button>
        </form>
